<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----/--/--"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="食事について"
            android:id="@+id/textView"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio1">

            <RadioButton
                android:text="たくさん食べた"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio1_1"/>

            <RadioButton
                android:text="普段と同じくらい食べた"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio1_2"/>

            <RadioButton
                android:text="あまり食べなかった"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio1_3"/>

        </RadioGroup>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="食事のメモ"
            android:id="@+id/editText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:text="睡眠について"
            android:id="@+id/textView2"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio2">

            <RadioButton
                android:text="夜中によく眠れている"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio2_1"/>

            <RadioButton
                android:text="夜中に何度も目を覚ましている"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio2_2"/>

            <RadioButton
                android:text="昼夜逆転している"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio2_3"/>

        </RadioGroup>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="睡眠のメモ"
            android:id="@+id/editText2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:text="話したこと"
            android:id="@+id/textView3"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:text="気になったこと"
            android:id="@+id/textView4"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:layout_margin="16dp"
            android:background="@color/colorBase"
            android:id="@+id/save_button"/>


    </LinearLayout>
</ScrollView>