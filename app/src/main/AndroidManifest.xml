<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.a.k.care_support.care_record_app">

    <application
        android:name=".RecordApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DateListActivity"
            android:label="@string/title_activity_date_list"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".InputCareActivity"
            android:label="様子の記録"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jp.a.k.care_support.care_record_app.MainActivity"/>
        <activity
            android:name=".InputActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>